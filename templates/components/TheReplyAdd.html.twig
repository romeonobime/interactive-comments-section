{% props replyContent = "", png = "", webp = "" %}

<div class="flex flex-col gap-4 rounded-lg bg-white p-4">
    <form data-model="*" class="flex flex-col gap-4 items-end">
        <textarea
            name="replyContent"
            value="{{ replyContent }}"
            class="input-field border-neutral-1 h-24"
            placeholder="Add a commentâ€¦" autocomplete="off"></textarea>
    </form>
    <div class="flex items-center justify-between">
        <twig:BaseAvatar
            png="{{ png }}"
            webp="{{ webp }}"
        />
        <button
            data-action="live#action"
            data-live-action-param="addReply"
            class="button button-primary uppercase body-medium-bold w-[104px]"
        >
            Reply
        </button>
    </div>
</div>
