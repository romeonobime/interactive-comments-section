<article {{ attributes }} class="flex flex-col gap-4">
    <twig:BaseCommentList comments="{{ this.comments }}" form="{{ form }}" />
        {{ form_start(form, { attr: {
                'data-action': 'live#action:prevent',
                'data-live-action-param': 'addComment',
                'name':'addCommentForm',
                'class': 'flex flex-col gap-4  rounded-lg bg-white p-4',
            }}) }}
        <textarea
            name="{{ field_name(form.content) }}"
            value="{{ field_value(form.content) }}"
            class="input-field border-neutral-1 h-24"
            placeholder="Add a commentâ€¦"></textarea>
        <div class="flex items-center justify-between">
            <figure class="h-8 w-8">
                <twig:BaseAvatar png="{{ app.user.image.png }}" webp="{{ app.user.image.webp }}"/>
            </figure>
            <button class="button button-primary uppercase body-medium-bold w-[104px]">
                Send
            </button>
        </div>
        {{ form_end(form) }}
</article>