<div {{ attributes }} class="flex flex-col gap-4 rounded-lg bg-white p-4">
    <form data-model="*" class="flex flex-col gap-4 items-end">
        <textarea
            name="content"
            value="{{ content }}"
            class="input-field border-neutral-1 h-24"
            placeholder="Add a commentâ€¦" autocomplete="off"></textarea>
    </form>
    <div class="flex items-center justify-between">
        <twig:BaseAvatar
            png="{{ app.user.image.png }}"
            webp="{{ app.user.image.webp }}"
        />
        <button
            data-action="live#emit"
            data-live-event-param="commentAdded"
            data-live-content-param="{{ content }}"
            class="button button-primary uppercase body-medium-bold w-[104px]">
            Send
        </button>
    </div>
</div>
